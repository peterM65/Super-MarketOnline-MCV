@model Product

@{
    ViewData["Title"] = "Details";
}

<!--Page header-->
<div class="page-header">
    <div class="page-leftheader">
        <h4 class="page-title">@Model.Title</h4>
        <ol class="breadcrumb pl-0">
            <li class="breadcrumb-item " aria-current="page"><a asp-area="Customer" asp-controller="Home" asp-action="Index">Home</a></li>
            <li class="breadcrumb-item active" aria-current="page">@Model.Title</li>
        </ol>
    </div>
</div>
<!--End Page header-->

<form method="post">
    <!-- Row -->
    <div class="row">
        <div class="col-md-12 wrapper wrapper-content animated fadeInRight">
            <div class="ibox card">
                <div class="card-body">
                    <div class="ibox-content">
                        <div class="row">
                            <div class="col-md-12 col-lg-5">
                                <div class="cart-product-imitation bg-light">
                                    @if (Model.ImageUrl == "")
                                    {
                                        <img src="https://placehold.co/500x600" style="width:100%" class="rounded" />
                                    }
                                    else
                                    {
                                        <img src="@Model.ImageUrl" style="width:100%" class="rounded" />
                                    }
                                </div>
                            </div>
                            <div class="col-md-12 col-lg-7">
                                <div class="card-body p-5">
                                    <h3 class=""><a href="#" class="text-navy h2 font-weight-semibold mr-1">@Model.Title</a><span class="badge badge-danger "> @Model.Category.Name</span></h3>
                                    <h6 class="mt-6 font-weight-semibold">Product Details</h6>
                                    <table class="table table-striped table-bordered m-top20">
                                        <tbody>
                                            <tr>
                                                <th scope="row">ASIN</th>
                                                <td>@Model.ASIN</td>
                                            </tr>
                                            <tr>
                                                <th scope="row">List Prise</th>
                                                <td>
                                                    <p>
                                                        <s>
                                                            EGY @Model.ListPrice
                                                        </s>
                                                    </p>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                    <table class="table table-striped table-bordered m-top20">
                                        <thead>
                                            <tr>
                                                <th>Quntity</th>
                                                <th>1-11</th>
                                                <th>12-23</th>
                                                <th>24+</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <td class="text-primary">Price</td>
                                                <td class="text-primary">EGY @Model.Price</td>
                                                <td class="text-primary">EGY @Model.Price12</td>
                                                <td class="text-primary">EGY @Model.Price24</td>
                                            </tr>
                                        </tbody>
                                    </table>
                                        <h4>Description lists</h4>
                                        <p>
                                            @Model.Description
                                        </p>
                                    <div class="row pl-2 mb-3">
                                        <div class="col-md-4">
                                            <div class="input-group mb-3">
                                                <span class="input-group-text bg-primary text-white border-0 ">
                                                    Count
                                                </span>
                                                <input type="number" value="1" min="1" class="form-control text-end"
                                                       aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="ibox-content card-footer text-right">
                    <a asp-area="Customer" asp-controller="Home" asp-action="Index" class="btn btn-secondary"><i class="fa fa-arrow-left"></i> Back</a>
                    <button type="submit" disabled class="btn btn-primary"><i class="fa fa fa-shopping-cart"></i> Add to Cart</button>
                </div>
            </div>
        </div>
    </div>
    <!-- End Row -->
</form>
