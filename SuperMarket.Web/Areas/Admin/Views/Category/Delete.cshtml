@model Category

@{
    ViewData["Title"] = "Delete";
}


<!--Page header-->
<div class="page-header">
    <div class="page-leftheader">
        <h4 class="page-title">Delete Category</h4>
        <ol class="breadcrumb pl-0">
            <li class="breadcrumb-item " aria-current="page"><a asp-area="Admin" asp-controller="Category" asp-action="Index">Category</a></li>
            <li class="breadcrumb-item active" aria-current="page">Delete Category</li>
        </ol>
    </div>
</div>
<!--End Page header-->


<div class="row">
    <div class="col-lg-12 col-md-12">
        <div class="card">
            <div class="card-body">
                <form method="post" asp-area="Admin" asp-controller="Category" asp-action="Delete">
                    <input asp-for="CategoryId" hidden />
                    <div class="form-group">
                        <label asp-for="Name" class="form-label"></label>
                        <input asp-for="Name"disabled class="form-control" placeholder="Name">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="DisplayOrder" class="form-label"></label>
                        <input asp-for="DisplayOrder" disabled class="form-control" min="1" placeholder="DisplayOrder">
                        <span asp-validation-for="DisplayOrder" class="text-danger"></span>
                    </div>
                    <div class="row pt-2">
                        <div class="col-6 col-md-3">
                            <button type="submit" class="btn btn-danger form-control">Delete</button>
                        </div>
                        <div class="col-6 col-md-3">
                            <a asp-area="Admin" asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary border  form-control">
                                Back to List
                            </a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts{

    <partial name="_ValidationScriptsPartial" />
}

